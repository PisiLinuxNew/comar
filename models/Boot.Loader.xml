        </method>
        <method name="removeUnused">
            <arg name="version" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>
        <signal name="Changed">
            <arg name="changed_item" type="s"/>
        </signal>
    </interface>
